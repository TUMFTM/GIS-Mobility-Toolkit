{
    "python.terminal.activateEnvironment": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "eeyore.yapf",
    },
    "pylint.args": [
        "--errors-only",
        "--disable=C0114",
        "--disable=C0115",
        "--disable=C0116"
    ],
    "yapf.args": [
        "--style",
        "{based_on_style:google, spaces_before_comment:4, indent_width: 4, split_before_logical_operator: false, column_limit: 120}"
    ]
}